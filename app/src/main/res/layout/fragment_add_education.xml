<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.doctor.doctorProfile.AddEducationFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:background="@color/purple_500">

            <ImageView
                android:id="@+id/ivCloseFilter"
                android:layout_width="@dimen/_32dp"
                android:layout_height="@dimen/_32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8dp"
                android:background="?selectableItemBackground"
                android:padding="@dimen/_8dp"
                android:src="@drawable/close"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_50dp"
                android:background="@color/transparent"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_8dp"
                android:text="Add Education"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />


        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_48dp"
            android:layout_marginBottom="@dimen/_40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Select Country"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spCountry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />

                </FrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Select Degree"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spDegree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />

                </FrameLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="College/University"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <EditText
                        android:id="@+id/etCollegeUniver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_medium"
                        android:hint="College/University"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/_8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />


                </FrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Degree No"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <EditText
                        android:id="@+id/etDegreeNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_medium"
                        android:hint="Degree No."
                        android:inputType="textCapSentences"
                        android:padding="@dimen/_8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />


                </FrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="From"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <EditText
                        android:id="@+id/etFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_medium"
                        android:hint="DD/MM/YYY"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/_8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />


                </FrameLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Till"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:background="@drawable/stroke_8">

                    <EditText
                        android:id="@+id/etToDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:fontFamily="@font/lato_medium"
                        android:hint="DD/MM/YYYY"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/_8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolBack"
                        app:layout_constraintTop_toTopOf="parent" />


                </FrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Upload Certificate"
                    android:textColor="@color/txtBlack1"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSelectdDocument"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        android:layout_margin="@dimen/_8dp"
                        android:src="@drawable/logo" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAddExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="@dimen/_16dp"
                        android:orientation="horizontal"
                        app:cardCornerRadius="@dimen/_8dp"
                        app:strokeColor="@color/txtBlack2"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6dp"
                            android:src="@drawable/ic_baseline_add_24" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_32dp"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="@dimen/_6dp"
                            android:text="Add Certificate"
                            android:textColor="@color/txtBlack2"
                            android:textSize="@dimen/_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/toolBack"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubmit"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@color/teal_700"
                android:fontFamily="@font/lato_bold"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>


    </FrameLayout>
</layout>