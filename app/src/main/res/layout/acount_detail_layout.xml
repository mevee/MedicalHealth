<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/grey2"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_2dp"
            android:text="Account Details"
            android:textColor="@color/txtBlack1"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolBack"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Bank Name"
            android:textColor="@color/txtBlack2"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolBack"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:background="@drawable/stroke_8">

            <EditText
                android:id="@+id/etBankName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:fontFamily="@font/lato_medium"
                android:hint="Enter bank name"
                android:inputType="textCapSentences"
                android:padding="@dimen/_8dp"
                android:singleLine="true"
                android:text="HDFC Bank"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toolBack"
                app:layout_constraintTop_toTopOf="parent" />


        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="IFSC code"
            android:textColor="@color/txtBlack2"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolBack"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:background="@drawable/stroke_8">

            <EditText
                android:id="@+id/etBranch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:fontFamily="@font/lato_medium"
                android:hint="Enter Branch"
                android:inputType="textCapSentences"
                android:padding="@dimen/_8dp"
                android:singleLine="true"
                android:text="DELHI"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toolBack"
                app:layout_constraintTop_toTopOf="parent" />


        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Place"
            android:textColor="@color/txtBlack2"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolBack"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:background="@drawable/stroke_8">

            <EditText
                android:id="@+id/etPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:fontFamily="@font/lato_medium"
                android:hint="Enter Plcae"
                android:inputType="textCapSentences"
                android:padding="@dimen/_8dp"
                android:singleLine="true"
                android:text="KAROL bagh"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toolBack"
                app:layout_constraintTop_toTopOf="parent" />


        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Date"
            android:textColor="@color/txtBlack2"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolBack"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:background="@drawable/stroke_8">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:fontFamily="@font/lato_medium"
                android:hint="Enter Date"
                android:inputType="textCapSentences"
                android:padding="@dimen/_8dp"
                android:singleLine="true"
                android:text="15 Sep 2019"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/toolBack"
                app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSelectdDocument"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                android:layout_margin="@dimen/_8dp"
                android:src="@drawable/logo" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/_16dp"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/_8dp"
                app:strokeColor="@color/txtBlack2"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_6dp"
                    android:src="@drawable/ic_baseline_add_24" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_32dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_6dp"
                    android:text="Add Signature"
                    android:textColor="@color/txtBlack2"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/toolBack"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/_6dp"
            android:background="@color/lightGreyBackGround"
            android:visibility="invisible" />


    </LinearLayout>

</layout>